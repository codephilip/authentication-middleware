{
  "name": "auth-middleware",
  "version": "1.0.0",
  "description": "Reusable authentication and authorization middleware for Express microservices",
  "main": "src/index.js",
  "keywords": ["authentication", "authorization", "middleware", "express", "jwt", "redis"],
  "author": "Philip",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:codephilip/authentication-middleware.git"
  },
  "scripts": {
    "test:coverage": "jest --coverage",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "dev": "cd example-service && npm run dev",
    "setup": "git submodule update --init --recursive && cd deps/logging-middleware && npm install && npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "build": "echo 'No build step required - pure JavaScript'",
    "clean": "rm -rf node_modules coverage .nyc_output",
    "install:example": "cd example-service && npm install"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "redis": "^4.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "src/**/*",
    "README.md",
    "package.json"
  ]
}
